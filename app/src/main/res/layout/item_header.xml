<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    style="@style/MyAdditionalView">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/header_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/note_text_size"
        android:gravity="center"
        app:fontFamily="@font/cormorant_unicase_light"
        android:textColor="@color/black"
        tools:text="@string/header" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_gravity="bottom"
        android:background="@color/black" />
</androidx.cardview.widget.CardView>