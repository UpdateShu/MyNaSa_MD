<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrolled_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sf_swipe_indicators"
        android:layout_marginBottom="@dimen/nasa_margin_bottom">

        <TextView
            android:id="@+id/solar_flares_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/solar_flares_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="center"/>

    <include
        android:id="@+id/f_earth_coordinator"
        layout="@layout/fragment_motion_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sun_motion_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sf_swipe_indicators"/>

    <LinearLayout
        android:id="@+id/sf_swipe_indicators"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/swipes_margin_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/swipe_margin"
            android:src="@drawable/swipe_indicator_passive">
        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/swipe_margin"
            android:src="@drawable/swipe_indicator_passive">
        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/swipe_margin"
            android:src="@drawable/swipe_indicator_active">
        </ImageView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>